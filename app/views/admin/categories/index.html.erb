<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 pull-right">
    <h2><%= t (".category") %></h2>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <div class="row">
            <div class="col-sm-6">
              <a href="/admin/books/new" class="btn btn-success btn-md"><%= t ".add" %></a>
            </div>
          </div>
          <div>
            <br>
          </div>
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th><%= t ".id" %></th>
                <th><%= t ".category" %></th>
                <th class="action"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody>
              <% load_categories.each do |category| %>
                <tr class=" gradeX">
                  <td id="catId"><%= category.id %></td>
                  <td>
                    <label for="rad1">
                      <%= link_to category.name, books_path(category: category.id), class: "link" %>
                    </label>
                  </td>
                  <td class="center">
                    <%= link_to t(".delete"), admin_category_path(category), method: :delete, data:{confirm: t("sure")}, class: "fa fa-trash btn btn-danger " %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


